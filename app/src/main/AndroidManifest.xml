<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:name=".RealisticApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar"
        tools:targetApi="31">

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/application_id" />
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />
        <meta-data
            android:name="com.facebook.sdk.ClientToken"
            android:value="@string/facebook_token_id" />

        <activity android:name=".classes.splash.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".classes.main.MainActivity"
            android:exported="true">
        </activity>

        <activity
            android:name=".classes.language.LanguageActivity"
            android:screenOrientation="portrait"
            android:exported="false">
        </activity>

        <activity
            android:name=".classes.setting.SettingActivity"
            android:exported="true">
        </activity>

        <activity
            android:name=".classes.result.GenerateResultActivity"
            android:exported="true">
        </activity>

        <activity
            android:name=".classes.profile.ProfileActivity"
            android:exported="true">
        </activity>
    </application>

</manifest>

