<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/color_0B0E11">

    <LinearLayout
        android:id="@+id/layoutTab"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:id="@+id/tabDiscovery"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgDiscovery"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_discovery_active" />

            <TextView
                android:id="@+id/tvDiscovery"
                style="@style/BaseFontSwitzerBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Discovery Artwork"
                android:textColor="@color/color_F7CDC1"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tabGenerate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgGenerate"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_generate_un_active" />

            <TextView
                android:id="@+id/tvGenerate"
                style="@style/BaseFontSwitzerBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Generate"
                android:textColor="@color/color_555555"
                android:textSize="12sp" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>