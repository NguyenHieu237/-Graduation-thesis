<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDefaultResource">

    <data>

    </data>

    <LinearLayout
        android:id="@+id/lnContainer"
        android:layout_width="72dp"
        android:layout_height="28dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_container_radius_14"
        android:backgroundTint="@color/color_C5FEEA"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgRatio"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:background="@color/color_010101" />

        <TextView
            android:id="@+id/tvRatio"
            style="@style/BaseFontSwitzerBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            tools:text="1:1"
            android:textColor="@color/color_010101"
            android:textSize="12sp" />

    </LinearLayout>

</layout>